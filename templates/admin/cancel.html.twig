{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block content_title 'Cancel' %}
{% block content_footer_wrapper '' %}

{% block main %}
    <div class="p-3">
        Demande de :
        <br />
        <strong>{{ requests[0].firstName }} {{ requests[0].lastName }}</strong> ({{ requests[0].zipCode }})
        <br />
        Travail : {{ requests[0].jobType }}
    </div>

    <div class="p-4">
        <p>
            Annuler la mise en relation de
            {{ type == 'groceries' ? 'courses' : 'garde d\'enfant' }} de
            {{ requests[0].firstName }} {{ requests[0].lastName }} ?
        </p>

        {% if remove == 'helper' %}
            <p>
                <strong>
                    Et supprimer le profil du volontaire en même temps ?
                </strong>
            </p>
        {% elseif remove == 'request' %}
            <p>
                <strong>
                    Et supprimer le besoin de la demande d'aide en même temps ?
                </strong>
            </p>
        {% endif %}

        <a href="?token={{ csrf_token('admin_cancel') }}&remove={{ remove }}" class="btn btn-primary mr-3">
            Oui, annuler
        </a>
        <a href="{{ path('admin_match_history') }}" class="btn btn-secondary">
            Non, annuler
        </a>
    </div>
{% endblock %}
